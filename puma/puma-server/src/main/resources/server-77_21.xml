<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
    http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">


    <bean id="server-77_21" class="com.dianping.puma.server.ReplicationBasedServer"
        parent="notifiableBean">
        <property name="host" value="10.1.77.21" />
        <property name="port" value="3306" />
        <property name="user" value="binlog" />
        <property name="password" value="binlog" />
        <property name="defaultBinlogFileName" value="host_77-21.000420" />
        <property name="defaultBinlogPosition" value="116284222" />
        <property name="parser" ref="defaultParser-77_21" />
        <property name="serverId" value="9999" />
        <property name="dataHandler" ref="datahandler-77_21" />
        <property name="dispatcher" ref="dispatcher-77_21" />
        <property name="binlogPositionHolder" ref="binlogPositionHolder" />
    </bean>

    <bean id="dispatcher-77_21"
        class="com.dianping.puma.sender.dispatcher.SimpleDispatherImpl"
        init-method="start">
        <property name="name" value="dispatcher-77_21" />
        <property name="senders">
            <list>
                <ref bean="fileSender-77_21" />
            </list>
        </property>
    </bean>

    <bean id="datahandler-77_21" class="com.dianping.puma.datahandler.DefaultDataHandler"
        init-method="start" parent="notifiableBean">
        <property name="tableMetasInfoFetcher" ref="tableMetasInfoFetcher-77_21" />
    </bean>

    <bean id="archiveStrategy-77_21" class="com.dianping.puma.storage.DefaultArchiveStrategy">
        <property name="maxMasterFileCount" value="1" />
    </bean>

    <bean id="cleanupStrategy-77_21" class="com.dianping.puma.storage.DefaultCleanupStrategy">
        <property name="preservedDay" value="14" />
    </bean>

    <bean id="tableMetasInfoFetcher-77_21"
        class="com.dianping.puma.datahandler.DefaultTableMetaInfoFetcher">
        <property name="metaDBHost" value="10.1.77.21" />
        <property name="metaDBPort" value="3306" />
        <property name="metaDBUser" value="binlog" />
        <property name="metaDBPassword" value="binlog" />
    </bean>

    <bean id="defaultParser-77_21" class="com.dianping.puma.parser.DefaultBinlogParser"
        init-method="start" />

    <bean id="fileSender-77_21" class="com.dianping.puma.sender.FileDumpSender"
        init-method="start" parent="notifiableBean">
        <property name="name" value="fileDumpSender-77_21" />
        <property name="storage" ref="storage-77_21" />
    </bean>

    <bean id="storage-77_21" class="com.dianping.puma.storage.DefaultEventStorage"
        init-method="start">
        <property name="codec" ref="jsonCodec" />
        <property name="masterBucketIndex" ref="localBucketIndex-77_21" />
        <property name="slaveBucketIndex" ref="hdfsBucketIndex-77_21" />
        <property name="archiveStrategy" ref="archiveStrategy-77_21" />
        <property name="cleanupStrategy" ref="cleanupStrategy-77_21" />
        <property name="name" value="storage-77_21" />
        <property name="binlogIndexBaseDir" value="/data/appdatas/puma/binlogIndex/77_21/" />
        <property name="timeStampIndexBaseDir"
            value="/data/appdatas/puma/timeStampIndex/77_21/" />
    </bean>

    <bean id="localBucketIndex-77_21" class="com.dianping.puma.storage.LocalFileBucketIndex"
        init-method="start">
        <property name="bucketFilePrefix" value="bucket-" />
        <property name="maxBucketLengthMB" value="1000" />
        <property name="baseDir"
            value="/data/appdatas/puma/storage/master/77_21/" />
    </bean>

    <bean id="hdfsBucketIndex-77_21" class="com.dianping.puma.storage.LocalFileBucketIndex"
        init-method="start">
        <property name="bucketFilePrefix" value="bucket-" />
        <property name="maxBucketLengthMB" value="1000" />
        <property name="baseDir"
            value="/data/appdatas/puma/storage/slave/77_21/" />
    </bean>

</beans>

